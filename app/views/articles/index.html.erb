<h1>All articles</h1>
<h4><%= link_to 'Add a new article', new_article_path %></h4>

<div class="main-container">
<div class="cards">
<% @articles.each do |article| %>

  <div class="card-category" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url(https://loremflickr.com/320/240/<%=article.title%>)">
    <%= link_to article.title, article_path(article) %>
    <%= link_to article_path(article),
  data: {turbo_method: :delete, turbo_confirm: "Are you sure?"} do %>
  <i class="fa fa-trash mx-3"></i>
  <% end %>
  </div>
<% end %>
</div>
</div>
